								handler: function(b,e){
									var mainForm = b.ownerCt.ownerCt;
							        var padre = mainForm.ownerCt;
							        padre.remove(mainForm);
								}
							}
				   ]
		       }
		],
		listeners:{
			'render':function(){
				hideBloque();
			}
		}
	};	
}


function borrarTarjetaNombre(id)
{
	Ext.Msg.confirm('Borrar','Desea borrar el elemento?', function(idButt){
		if(idButt == 'yes')
		{
			Ajax.PostElement.request({
				url: baseURL + '/fact/tarjeta-nombre/delete',
				success: function(response, opt){
					mainStore.reload();
				},
				jsonData:{
					'delete': [id]
				}
	 		});
		}
	});
}

function editarTarjetaNombre(id)
{
	
	var registro = mainStore.getById(id);
	
	if(registro)
	{
		var destino = Ext.getCmp('formContainer');
		if(destino)
		{
			destino.removeAll();
			var addedEl = destino.add(formularioTarjetaNombre(false, registro.data, false));
			destino.doLayout();
			addedEl.body.highlight();
		}
	}
}




